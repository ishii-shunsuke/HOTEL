<div class="container">
	<%= form_for @reservation,url: users_reservation_path(@reservation), method: :patch do |f| %>
	<div class="row">
		<div class="input col-md-2">
			<%= f.label :reservation_date,"チェックイン" %>
			<%= f.text_field :reservation_date, class: 'date-picker', value:@reservation.reservation_date, placeholder: "日付入力" %>
		</div>
		<div class="input col-md-2">
			<%= f.label :checkout_date,"チェックアウト" %>
			<%= f.text_field :checkout_date, class: 'date-picker', value:@reservation.checkout_date, placeholder: "日付入力" %>
		</div>
		<div class="col-md-2">
			<%= f.label :person,"人数" %>
			<%= f.number_field :person, min:1, :value => @reservation.person %>
		</div>
		<div class="col-md-2">
			<%= f.label :room_count,"部屋数" %>
			<%= f.number_field :room_count, min:1, :value => @reservation.room_count %>
		</div>
		<div class="col-md-2">
			<%= f.submit "条件を変更する", class: "btn btn-success btn-enter mt-4" %>
		</div>
	</div>
	<% end %>
	<div class="row">
		<div class="col text-center">
			<h3>スタンダードプラン（素泊まり）</h3>
		</div>
	</div>
	<div class="row">
		<div class="col text-center">
			<p class="text-center">・出張などビジネスでのお客様も、ご家族やカップル、お友達同士などでお出掛けの<br>
			お客様にも、幅広くご利用頂けます</p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<%= image_tag("business.jpg", :size => "300x350") %>
		</div>
		<%= @plans.each do |plan| %>
		<%= form_for(plan) do |f| %>
		<div class="col-md-2 offset-1">
			<h5><%= plan.room_type.room_type_name %></h5>
		</div>
		<div class="col-md-2">
			<h5><%= plan.price %>円</h5>
		</div>
		<div class="col-md-1">
			<%= f.submit '予約する', class: "btn btn-success btn-enter mt-4" %>
		</div>
		<% end %>
		<% end %>
	</div>
	<div class="row">
		<div class="col text">
		</div>
	</div>