<div class="container">
	<% @plans.each do |plan| %>
	<div class="border"></div>
	<div class="row">
		<div class="col text-center">
			<h3 class="plan_title"><%= plan.plan_name %></h3>
		</div>
	</div>
	<div class="row">
		<div class="col text-center">
			<p class="text-center"><%= plan.plan_description %></p>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-3">
			<%= attachment_image_tag plan,:plan_image, fallback: "no_image.jpg", size: '300x350' %>
		</div>
		<div class="col-lg-8 offset-1">
			<div class="row">
				<% plan.rooms.each do |room| %>
				<div class="col-md-6">
					<h5 class="room-title"><%= room.room_type.room_type_name %></h5>
					<div class="border-plan"></div>
				</div>
				<div class="col-md-3">
					<h5 class="room-title"><%= room.price %>円</h5>
				</div>
				<div class="col-md-2">
					<h5 class="room-title"><%= link_to '詳細ページへ', users_plan_room_path(plan.id,room.id), class: "btn btn-success" %></h5>
				</div>
				<% end %>
			</div>
		</div>
	</div>
	<% end %>
</div>
